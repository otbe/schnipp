{
  "compilerOptions": {
    "target": "es6",
    "moduleResolution": "node",
    "declaration": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "sourceMap": false,
    "lib": [
      "esnext"
    ],
    "types": ["reflect-metadata", "node"],
  },
  "include": ["src/**/*"]
}
